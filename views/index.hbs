    <section class="projects" id="portfolio">
        <h2>Project Portfolio</h2>
        
        <!-- Portfolio Summary -->
        <div class="portfolio-intro">
            <p class="portfolio-summary">
                <strong>{{portfolioData.stats.totalProjects}}+ autonomous systems</strong> across 8 specialized domains, showcasing advanced agentic architectures from 
                medical AI serving real patients to self-improving research agents. <strong>2+ years pioneering</strong> multi-agent coordination, 
                LLM orchestration, and production-ready intelligent automation.
            </p>
            
        </div>

        <!-- Search and Filter Interface -->
        <div class="search-filter-section">
            <div class="search-controls">
                <div class="search-input-group">
                    <input type="text" id="searchInput" placeholder="Search projects..." value="{{query.search}}" />
                    <button type="button" id="clearSearch" class="clear-btn">Clear</button>
                </div>
                
                <div class="filter-controls">
                    <div class="filter-group">
                        <label for="categoryFilter">Category:</label>
                        <select id="categoryFilter">
                            <option value="">All Categories</option>
                            <option value="healthcare">AI Healthcare & Medical Applications (3)</option>
                            <option value="research">AI Research & Detection Tools (2)</option>
                            <option value="automation">AI Agents & Automation (3)</option>
                            <option value="webapp">Web Applications & PWAs (2)</option>
                            <option value="business">Client Work & Business Applications (2)</option>
                            <option value="tools">Development Tools & Utilities (2)</option>
                            <option value="analytics">Data Processing & Analytics (2)</option>
                            <option value="design">UI/Design & Animation Projects (2)</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="techFilter">Technology:</label>
                        <select id="techFilter">
                            <option value="">All Technologies</option>
                            <option value="AI Integration">AI Integration</option>
                            <option value="Next.js">Next.js</option>
                            <option value="React">React</option>
                            <option value="TypeScript">TypeScript</option>
                            <option value="Python">Python</option>
                            <option value="PostgreSQL">PostgreSQL</option>
                            <option value="OpenAI">OpenAI</option>
                            <option value="GPT-4">GPT-4</option>
                            <option value="Node.js">Node.js</option>
                            <option value="Real-time">Real-time</option>
                            <option value="PWA">PWA</option>
                            <option value="RAG">RAG</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="results-info">
                {{#if hasFilters}}
                <span id="resultsCount">{{filteredProjects.length}} projects found</span>
                {{else}}
                <span id="resultsCount">Browse all projects or use search to filter</span>
                {{/if}}
                <!-- Debug: hasFilters={{hasFilters}}, query={{query}}, search={{query.search}} -->
                <!-- All vars: isHome={{isHome}}, title={{title}} -->
                <!-- DebugInfo: hasFiltersType={{debugInfo.hasFiltersType}}, hasFiltersValue={{debugInfo.hasFiltersValue}}, querySearchValue={{debugInfo.querySearchValue}} -->
            </div>
        </div>
        
        {{#if hasFilters}}
        <!-- Filtered Results -->
        <div class="filtered-results">
            <div class="projects-grid">
                {{#each filteredProjects}}
                <article class="project-card" onclick="location.href='/projects/{{id}}'">
                    <div class="project-icon {{category}}">
                        <span>{{shortTitle}}</span>
                    </div>
                    <div class="project-content">
                        <h3 class="project-title">{{title}}</h3>
                        <div class="tech-tags">
                            {{#each technologies}}
                            <span class="tech-tag">{{this}}</span>
                            {{/each}}
                        </div>
                    </div>
                </article>
                {{/each}}
            </div>
            
            {{#unless filteredProjects.length}}
            <div class="no-projects">
                <p>No projects found matching your search criteria. Try adjusting your filters.</p>
            </div>
            {{/unless}}
        </div>
        {{else}}
        <!-- Default Category View -->
        {{#each projectCategories}}
        <!-- {{name}} -->
        <div class="category-section">
            <div class="category-header">
                <h3 class="category-title">{{name}}</h3>
                <span class="project-count">{{count}} Projects</span>
            </div>
            <p class="category-description">
                {{description}}
            </p>
            
            <div class="featured-projects">
                {{#each featuredProjects}}
                <article class="project-card featured" onclick="location.href='/projects/{{id}}'">
                    <div class="project-icon {{category}}">
                        <span>{{shortTitle}}</span>
                    </div>
                    <div class="project-content">
                        <h4 class="project-title">{{title}}</h4>
                        <div class="tech-tags">
                            {{#each technologies}}
                            <span class="tech-tag">{{this}}</span>
                            {{/each}}
                        </div>
                    </div>
                </article>
                {{/each}}
            </div>
            
            <div class="view-all">
                <a href="/{{id}}-projects" class="view-all-link">View All {{name}} ({{count}})</a>
            </div>
        </div>
        {{/each}}
        {{/if}}

    </section>
</div>