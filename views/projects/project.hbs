<div class="container">
    <a href="/" class="back-button">
        <span>‚Üê</span> Back to Projects
    </a>

    <article class="project-header">
        <h1>{{project.title}}</h1>
        <p class="project-intro">
            {{project.description}}
        </p>
    </article>

    <section class="project-screenshot">
        {{#if project.heroImage}}
        <img src="/images/projects/{{project.heroImage}}" alt="{{project.heroImageAlt}}" class="hero-image" />
        {{else}}
        <div class="hero-placeholder">Project Screenshot</div>
        {{/if}}
    </section>

    {{#if project.link}}
    <section class="project-links">
        <h3>Project Links</h3>
        <div class="links-container">
            <a href="{{project.link}}" target="_blank" rel="noopener noreferrer" class="project-link">
                {{project.link}}
            </a>
            {{#if project.secondLink}}
            <a href="{{project.secondLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                {{project.secondLink}}
            </a>
            {{/if}}
        </div>
    </section>
    {{else}}
    {{#if project.secondLink}}
    <section class="project-links">
        <h3>Project Links</h3>
        <div class="links-container">
            <a href="{{project.secondLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                {{project.secondLink}}
            </a>
        </div>
    </section>
    {{/if}}
    {{/if}}

    <section class="tech-section">
        <h3>Technology Stack</h3>
        <div class="tech-stack">
            {{#each project.technologies}}
            <span class="tech-tag">{{this}}</span>
            {{/each}}
        </div>
    </section>

    {{#if relatedProjects}}
    <section class="related-projects">
        <h3>Related Projects</h3>
        <ul class="related-list">
            {{#each relatedProjects}}
            <li><a href="/projects/{{id}}">{{title}}</a></li>
            {{/each}}
        </ul>
    </section>
    {{/if}}
</div>